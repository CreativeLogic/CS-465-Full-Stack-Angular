<!DOCTYPE html>
<!-- Website template by freewebsitetemplates.com -->
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dive Sites - Bhaccasyoniztas Beach Resort Website Template</title>
    <link rel="stylesheet" href="/css/style.css" type="text/css">
</head>
<body>
    <div id="background">
        <div id="page">
            {{> header}}
            <div id="contents">
                <div class="box">
                    <div>
                        <div class="body">
                            <h1>Travel</h1>
                            <ul id="sites">
                                {{#each trips}}
                                <li>
                                    <a href="/travel/{{this.code}}">
                                        <img src="images/{{this.image}}" alt="{{this.name}} Image">
                                    </a>
                                    {{{description}}}
                                </li>
                                {{/each}}
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
            {{> footer}}
        </div>
    </div>
</body>
</html>
